<h1><%= t('articles.new') %></h1>

<% unless @article.errors.empty? %>
  <div class="alert alert-danger">
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @article, url: articles_path do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title, class: 'form-control' %>
	</p>

	<%= f.fields_for :images do |i| %>
		<%= i.file_field :attachment, id: 'article-img' %><br />
	<% end %>
	
	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text, class: 'form-control', rows: 7 %>
	</p>

	<p>
		<%= f.submit t('articles.create'), class: 'btn btn-primary' %>
	</p>

<% end %>
