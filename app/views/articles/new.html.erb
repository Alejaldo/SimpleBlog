<h1><%= t('articles.new') %></h1>

<%= form_for :article, url: articles_path do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title, class: 'form-control' %>
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text, class: 'form-control', rows: 5 %>
	</p>

	<p>
		<%= f.submit class: 'btn btn-primary' %>
	</p>

<% end %>
