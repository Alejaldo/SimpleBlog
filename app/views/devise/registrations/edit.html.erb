<h2><%= t('headers.profile_chng') %><%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control'%></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(<%= t('devise.registrations.leave_blank') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

  <div><%= f.label :current_password %> <i>(<%= t('devise.registrations.oldpass_to_confirm') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %></div>
    </br>

  <div><%= f.submit t('buttons.update'), class: 'btn btn-primary' %></div>
<% end %>

<hr />

<h3><%= t('headers.cancel_acc') %></h3>

<p><%= button_to t('buttons.cancel_acc'), registration_path(resource_name), data: { confirm: t('confirms.sure') }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to t('action_links.back'), :back %>
