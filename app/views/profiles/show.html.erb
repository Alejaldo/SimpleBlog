 <h1>User profile</h1>

<% unless @profile.image %>
	<h3> Avatar is missing </h3><br />
<% else %>
	<%= image_tag @profile.image.attachment_url %>
	<br />
	<br />
<% end %>

<%= @profile.description %>
<br />
<br />
<% if user_signed_in? %>
  <% if @profile.user_id == current_user.id %>
  	<%= link_to 'Edit profile', edit_user_profile_path(current_user.id), class: "btn btn-warning" %>
  <% end %>
<% end %>