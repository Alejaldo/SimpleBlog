<h1>Edit profile</h1>


<% if @image.attachment.size == 0 %>
	<%= link_to "Upload avatar", edit_image_path(@image) %>
	</br>
	</br>
<% else %>
	<img src="<%= @profile.image.attachment %>" /></br>
	<%= link_to "Change avatar", edit_image_path(@image) %>
	</br>
	</br>
<% end %>


<%= form_for :profile, url: user_profile_path(current_user.id), method: :put do |f| %>

	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description, class: 'form-control', rows: 5 %>
	</p>

	<p>
	<%= f.submit 'Submit', class: 'btn btn-primary' %>
	</p>

<% end %>

